<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tax Credit System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CTSolution.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/resource/fontawesome/6.6.0/css/all.min.css" asp-append-version="true" />
    <style>
        body {
            font-size: .875rem;
            background-color: #f0f4f8;
            color: #333;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            background-color: #ffffff;
            color: #333;
            padding: 20px;
            border-right: 1px solid #ddd;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
        }

            .sidebar h4 {
                font-size: 1.25rem;
                margin-bottom: 20px;
                color: #5b5b5b;
            }

            .sidebar a {
                color: #333;
                text-decoration: none;
                display: block;
                padding: 10px;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .sidebar a:hover {
                    background-color: #e7f1ff;
                }

        .main-content {
            margin-left: 220px;
            padding: 20px;
            transition: margin-left 0.3s ease;
            background-color: #f9fafc;
            min-height: 100vh;
        }

        .footer {
            padding: 20px 0;
            width: 100%;
            background-color: #ffffff;
            color: #5b5b5b;
            border-top: 1px solid #ddd;
            text-align: center;
            position: relative;
        }

            .footer a {
                color: #007bff;
                text-decoration: none;
            }

                .footer a:hover {
                    color: #0056b3;
                }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="sidebar">
        <h4>Tax Credit System</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Dashboard" asp-action="Index"><i class="fa-solid fa-house"></i>ပင်မစာမျက်နှာ</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="TaxPayerInfo" asp-action="Index"><i class="fa-solid fa-person"></i>အခွန်ထမ်းစာရင်း</a>
            </li>
            <!-- Start of Nested Menu -->
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="collapse" href="#collapseImport" role="button" aria-expanded="false" aria-controls="collapseImport">
                    ပြည်ပတင်သွင်း
                </a>
                <ul class="collapse nav flex-column ms-3" id="collapseImport">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="PurchaseImportMaster" asp-action="Index">ပြည်ပတင်သွင်းအခွန်စာရင်း</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="PurchaseImportDetail" asp-action="Index">ကုန်ပစ္စည်းအသေးစိတ်စာရင်း</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="PurchaseTransaction" asp-action="Index">အခွန်ပေးသွင်းငွေစာရင်း</a>
                    </li>
                </ul>
            </li>
            <!-- End of Nested Menu -->
            <a class="nav-link" data-bs-toggle="collapse" href="#collapseImport" role="button" aria-expanded="false" aria-controls="collapseImport">
                ငွေပေးချေပြီးစာရင်း
            </a>
            <ul class="collapse nav flex-column ms-3" id="collapseImport">
            <li class="nav-item">
                    <a class="nav-link" asp-controller="PurchaseTransaction" asp-action="LastCompletedTransaction">ပြည်ပတင်သွင်းအခွန်ငွေပေးချေပြီးစာရင်း</a>
            </li>
            </ul>
        </ul>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-center">
        <div class="container">
            &copy; 2024 - CTSolution - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
