@model IEnumerable<CTSolution.Models.PurchaseTransaction>

<h1>ပြည်ပတင်သွင်းအခွန်စာရင်း</h1>



<table class="table">
    <thead>
        <tr>
            <th>
                Transaction ID
            </th>
            <th>
                Chalen No
            </th>
            <th>
                Tax Amount
            </th>
            <th>
                Paid Amount
            </th>
            <th>
                Balance Amount
            </th>
            <th>
                Is Completed
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChalenNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaidAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BalanceAmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsCompleted)
                </td>
                <td>

                    <a asp-action="Delete" asp-route-id="@item.TransactionID" class="btn btn-danger"><i class="fas fa-trash"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
