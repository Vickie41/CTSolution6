@model CTSolution.Models.PurchaseImportDetail

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> ပြည်ပတင်သွင်းကုန်ပစ္စည်းစာရင်းသွင်းရန်</title>
    
</head>
<body>
    <div class="container mt-5">
        <h5 class="mb-4">ပြည်ပတင်သွင်းကုန်ပစ္စည်းစာရင်းသွင်းရန်</h5>

        <form asp-action="Create">
            @Html.HiddenFor(model => model.TransactionID, new { Value = Model.TransactionID ?? DateTime.Now.ToString("yyyyMMddHHmmssfff") })

            <div class="mb-3">
                <label asp-for="GoodsServicesName" class="form-label"></label>
                <input asp-for="GoodsServicesName" class="form-control" />
                <div class="form-text text-danger">@Html.ValidationMessageFor(model => model.GoodsServicesName)</div>
            </div>

            <div class="mb-3">
                <label asp-for="UnitType" class="form-label"></label>
                <input asp-for="UnitType" class="form-control" />
                <div class="form-text text-danger">@Html.ValidationMessageFor(model => model.UnitType)</div>
            </div>

            <div class="mb-3">
                <label asp-for="Qty" class="form-label"></label>
                <input asp-for="Qty" class="form-control" type="number" />
                <div class="form-text text-danger">@Html.ValidationMessageFor(model => model.Qty)</div>
            </div>

            <div class="mb-3">
                <label asp-for="ImportValue" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="ImportValue" class="form-control" />
                </div>
                <div class="form-text text-danger">@Html.ValidationMessageFor(model => model.ImportValue)</div>
            </div>

            <div class="mb-3">
                <label asp-for="ValueOnLand" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="ValueOnLand" class="form-control" />
                </div>
                <div class="form-text text-danger">@Html.ValidationMessageFor(model => model.ValueOnLand)</div>
            </div>

            <div class="mb-3">
                <label asp-for="TaxRate" class="form-label"></label>
                <input asp-for="TaxRate" class="form-control" type="number" step="0.01" />
                <div class="form-text text-danger">@Html.ValidationMessageFor(model => model.TaxRate)</div>
            </div>

            <div class="mb-3">
                <label asp-for="TaxAmt" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="TaxAmt" class="form-control" type="number" step="0.01" />
                </div>
                <div class="form-text text-danger">@Html.ValidationMessageFor(model => model.TaxAmt)</div>
            </div>

            <div class="mb-3">
                <label asp-for="Note" class="form-label"></label>
                <textarea asp-for="Note" class="form-control"></textarea>
                <div class="form-text text-danger">@Html.ValidationMessageFor(model => model.Note)</div>
            </div>

            <button type="submit" class="btn btn-primary">Save Details</button>
        </form>

        
    </div>
</body>
</html>
