@model CTSolution.Models.PurchaseImportDetail

@{
    ViewData["Title"] = "ပြည်ပတင်သွင်းကုန်ပစ္စည်းစာရင်းပြင်ရန်";
}

<div class="container">
    <h5 class="my-4">ပြည်ပတင်သွင်းကုန်ပစ္စည်းစာရင်းပြင်ရန်</h5>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title">ပြည်ပတင်သွင်းကုန်ပစ္စည်းစာရင်းပြင်ရန်</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.PurchaseImportDetailPkid)
                @Html.HiddenFor(model => model.TransactionID, new { Value = Model.TransactionID ?? DateTime.Now.ToString("yyyyMMddHHmmssfff") })

                <div class="mb-3">
                    <label asp-for="GoodsServicesName" class="form-label"></label>
                    <input asp-for="GoodsServicesName" class="form-control" />
                    <span asp-validation-for="GoodsServicesName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UnitType" class="form-label"></label>
                    <input asp-for="UnitType" class="form-control" />
                    <span asp-validation-for="UnitType" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Qty" class="form-label"></label>
                    <input asp-for="Qty" class="form-control" type="number" />
                    <span asp-validation-for="Qty" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImportValue" class="form-label"></label>
                    <input asp-for="ImportValue" class="form-control" />
                    <span asp-validation-for="ImportValue" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ValueOnLand" class="form-label"></label>
                    <input asp-for="ValueOnLand" class="form-control" />
                    <span asp-validation-for="ValueOnLand" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TaxRate" class="form-label"></label>
                    <input asp-for="TaxRate" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="TaxRate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TaxAmt" class="form-label"></label>
                    <input asp-for="TaxAmt" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="TaxAmt" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Note" class="form-label"></label>
                    <textarea asp-for="Note" class="form-control"></textarea>
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
