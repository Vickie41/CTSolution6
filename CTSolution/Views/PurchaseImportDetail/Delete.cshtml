@model CTSolution.Models.PurchaseImportDetail

@{
    ViewData["Title"] = "ပြည်ပတင်သွင်းကုန်ပစ္စည်းစာရင်းဖျက်ရန်";
}

<h1>ပြည်ပတင်သွင်းကုန်ပစ္စည်းစာရင်းဖျက်ရန်</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Model.GoodsServicesName</h4>
    <hr />
    <dl class="row">
        
        <dt class="col-sm-2">
            Goods/Services Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GoodsServicesName)
        </dd>
        <dt class="col-sm-2">
            Unit Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitType)
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Qty)
        </dd>
        <dt class="col-sm-2">
            Import Value
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImportValue)
        </dd>
        <dt class="col-sm-2">
            Value On Land
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValueOnLand)
        </dd>
        <dt class="col-sm-2">
            Tax Rate
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaxRate)
        </dd>
        <dt class="col-sm-2">
            Tax Amount
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaxAmt)
        </dd>
        <dt class="col-sm-2">
            Note
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name= "id" asp-for="PurchaseImportDetailPkid" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
