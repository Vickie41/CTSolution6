@model IEnumerable<CTSolution.Models.PurchaseImportDetail>

@{
    ViewData["Title"] = "ပြည်ပတင်သွင်းကုန်ပစ္စည်းစာရင်း";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">@ViewData["Title"]</h1>

        <p class="mb-4">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> စာရင်းသွင်းရန်
            </a>
        </p>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().GoodsServicesName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().UnitType)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Qty)</th>
                    <th>@Html.DisplayNameFor(model => model.First().ImportValue)</th>
                    <th>@Html.DisplayNameFor(model => model.First().ValueOnLand)</th>
                    <th>@Html.DisplayNameFor(model => model.First().TaxRate)</th>
                    <th>@Html.DisplayNameFor(model => model.First().TaxAmt)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Note)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.GoodsServicesName)</td>
                        <td>@Html.DisplayFor(modelItem => item.UnitType)</td>
                        <td>@Html.DisplayFor(modelItem => item.Qty)</td>
                        <td>@Html.DisplayFor(modelItem => item.ImportValue)</td>
                        <td>@Html.DisplayFor(modelItem => item.ValueOnLand)</td>
                        <td>@Html.DisplayFor(modelItem => item.TaxRate)</td>
                        <td>@Html.DisplayFor(modelItem => item.TaxAmt)</td>
                        <td>@Html.DisplayFor(modelItem => item.Note)</td>
                        <td>
                            <a href="@Url.Action("Edit", "PurchaseImportDetail", new { id = item.PurchaseImportDetailPkid })" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="@Url.Action("Delete", "PurchaseImportDetail", new { id = item.PurchaseImportDetailPkid })" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                            <a href="@Url.Action("Detail", "PurchaseImportDetail", new { id = item.PurchaseImportDetailPkid })" class="btn btn-info btn-sm">
                                <i class="fas fa-info-circle"></i> Detail
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>
