@model CTSolution.Models.PurchaseImportMaster

<h5>ပြည်ပတင်သွင်းအခွန်စာရင်း</h5>
<br />
<br />

<div>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImporterPkid)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TaxPayerInfo.PersonName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TIN_Number)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TaxPayerInfo.TIN_Number)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CommercialLicense)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TaxPayerInfo.CommercialLicense)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeclarationFormNo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeclarationFormNo)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeclarationFormDate)
            </dt>
            <dd class="col-sm-10">
                @Model.DeclarationFormDate.ToString("dd-MM-yyyy")
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TaxOffice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TaxOffice)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TaxOfficer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TaxOfficer)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Note)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Note)
            </dd>
        </dl>
    </div>
    <br />
    <h5>ကုန်ပစ္စည်းအသေးစိတ်စာရင်း</h5>
    <br />
    <br />

    @if (Model.PurchaseImportDetail != null && Model.PurchaseImportDetail.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PurchaseImportDetail.First().GoodsServicesName)</th>
                    <th>@Html.DisplayNameFor(model => model.PurchaseImportDetail.First().UnitType)</th>
                    <th>@Html.DisplayNameFor(model => model.PurchaseImportDetail.First().Qty)</th>
                    <th>@Html.DisplayNameFor(model => model.PurchaseImportDetail.First().ImportValue)</th>
                    <th>@Html.DisplayNameFor(model => model.PurchaseImportDetail.First().ValueOnLand)</th>
                    <th>@Html.DisplayNameFor(model => model.PurchaseImportDetail.First().TaxRate)</th>
                    <th>@Html.DisplayNameFor(model => model.PurchaseImportDetail.First().TaxAmt)</th>
                    <th>@Html.DisplayNameFor(model => model.PurchaseImportDetail.First().Note)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model.PurchaseImportDetail)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => detail.GoodsServicesName)</td>
                        <td>@Html.DisplayFor(modelItem => detail.UnitType)</td>
                        <td>@Html.DisplayFor(modelItem => detail.Qty)</td>
                        <td>@Html.DisplayFor(modelItem => detail.ImportValue)</td>
                        <td>@Html.DisplayFor(modelItem => detail.ValueOnLand)</td>
                        <td>@Html.DisplayFor(modelItem => detail.TaxRate)</td>
                        <td>@Html.DisplayFor(modelItem => detail.TaxAmt)</td>
                        <td>@Html.DisplayFor(modelItem => detail.Note)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No details available.</p>
    }


    <p>
        <a asp-action="Edit" asp-route-id="@Model.PurchaseImportPkid" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </p>
</div>
